{
  "manifest_version": 3,
  "name": "LatexToCalc",
  "version": "1.2.0",
  "description": "Translate LaTeX text from clipboard to a calculator compatible format.",
  "permissions": ["clipboardRead", "clipboardWrite", "activeTab", "scripting", "commands", "storage"],
  "host_permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "translate-clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Translate clipboard"
    }
  },
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  }
}
